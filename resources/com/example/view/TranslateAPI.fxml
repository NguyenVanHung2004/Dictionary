      <ChoiceBox fx:id="choiceBoxTranslateTo" layoutX="504.0" layoutY="37.0" prefHeight="25.0" prefWidth="130.0" />
      <ImageView fitHeight="26.0" fitWidth="24.0" layoutX="288.0" layoutY="275.0" onMouseClicked="#speechInput" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/soundIcon.png"  />
         </image>
      </ImageView>
      <ImageView fitHeight="26.0" fitWidth="24.0" layoutX="606.0" layoutY="275.0" onMouseClicked="#speechOutput" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/soundIcon.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
